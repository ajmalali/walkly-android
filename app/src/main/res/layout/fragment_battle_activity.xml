<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/player_bitmoji"
                android:layout_width="174dp"
                android:layout_height="235dp"
                android:contentDescription="bitmoji"
                app:srcCompat="@drawable/bitmoji1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/versus"
                android:textAlignment="center"
                android:textSize="40sp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/boss_bitmoji"
                android:layout_width="201dp"
                android:layout_height="188dp"
                android:layout_marginTop="44dp"
                android:contentDescription="bitmoji" />
        </LinearLayout>

        <TextView
            android:id="@+id/enemy_health_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="1.3sp"
            android:text="@string/enemy_health"
            android:textColor="#f75064"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/enemy_health_bar"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

        <ProgressBar
            android:id="@+id/enemy_health_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="319dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:minHeight="15dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/enemy_health_text" />


        <ProgressBar
            android:id="@+id/player_health_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="319dp"
            android:layout_height="14dp"
            android:layout_marginTop="8dp"
            android:indeterminate="false"
            android:minHeight="15dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ProgressBar
            android:id="@+id/player_step_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="319dp"
            android:layout_height="14dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:indeterminate="false"
            android:minHeight="15dp"
            android:progress="0"
            android:progressDrawable="@drawable/progressbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1.3sp"
            android:text="@string/player_health"
            android:textColor="#f75064"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/player_health_bar"
            app:layout_constraintTop_toBottomOf="@+id/enemy_health_bar" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="1.3sp"
            android:text="Number of Steps"
            android:textColor="#f75064"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/player_step_bar"
            app:layout_constraintTop_toBottomOf="@+id/player_health_bar" />

        <Button
            android:id="@+id/use_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_button"
            android:text="@string/use_items"
            app:layout_constraintEnd_toEndOf="@+id/player_step_bar"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/player_step_bar"
            app:layout_constraintTop_toBottomOf="@+id/player_step_bar" />

        <Button
            android:id="@+id/leaveBattle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@drawable/rounded_button"
            android:text="@string/leave_battle"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/grey_500"
            android:textColor="#000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/use_items"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/use_items" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>